<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,pivot,graph,calendar,form</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>

     <record id="helpdesk_ticket_related_action" model="ir.actions.act_window">
        <field name="name">Action</field>
       
        <field name="res_model">helpdesk.ticket.action</field>
        <field name="view_mode">tree,form</field>

        <field name="domain"> [('ticket_id','=', active_id)] </field>
        <field name="context"> {'default_ticket_id': active_id} </field>
    </record>


    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets" decoration-info="state == 'new'" decoration-muted="state == 'canceled'" decoration-success="state in ('assigned', 'in_process')" decoration-warning="state == 'pending'" decoration-danger="state == 'resolved'">
                <field name="sequence" widget="handle"/>
                <field name="nombre"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date" optional="show"/>
                <field name="date_limit" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,assigned,in_process,pending,resolved,canceled"/>
                    <button name="get_assigned" type="object" string="Asignar a mÃ­" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'new')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="nombre"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                            <field name="amount_time" widget="float_time"/>
                            <field name="partner_id" context="{'default_company_type':'person', 'default_user_id':user_id, 'default_search_user_id':user_id}"/>
                        </group>

                        <group>
                            <field name="assigned"/>
                            <field name="user_id"/>
                            <field name="ticket_count"/>
                            <field name="tag_name"/>
                            <button string="crear" type="object" name="create_tag">

                            </button>

                            <button string="Limpiar" type="object" name="clear_tags">

                            </button>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="user_name"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <button string="Update only this" name="update_description" type="object" class="btn-primary"/>
                            <button string="Update all description" name="update_other_description" type="object" class="btn-primary"/>
                            <field name="description"/>
                        </page>


                        <page string="To do" name="actions_todo">
                            <field name="actions_todo"/>
                        </page>
                        <page string="Actions" name="actions">
                      
                            <!-- <label for="actions_todo" string="To Do"/> -->
                            <button string="Set all as done" name="set_actions_as_done" type="object"/>
                             <button string="open related actions" name="%(helpdesk_hodeilarra.helpdesk_ticket_related_action)d" type="action"/>
                            <field name="action_ids">
                                <tree string="Actions">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                                <form>
                                    <button string="Set done" name="set_done" type="object" class="btn-primary"/>
                                    <button string="Set todo" name="set_todo" type="object" class="btn-primary"/>
                                    <group>
                                        <field name="name"/>
                                        <field name="state" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                    </notebook>



                </sheet>
               <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
    </record>

    <!--VISTA SEARCH-->

    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Tickets">
                <filter name="nombre"/>
                <filter name="user_id"/>
                <filter string="Assigned" name="assigned" domain="[('assigned','=',True)]"/>
                <filter string="No date" name="date" domain="[('date','=',False)]"/>
                <filter string="Date" name="date" context="{'group_by':'date'}"/>
                <filter string="User" name="user" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>

    <!--KANBAN-->

    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="user_id">
                <field name="nombre"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? (record.color ? kanban_color(record.color.raw_value) : '') : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content flex-grow-1">

                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="nombre"/>
                                </strong>
                                <ul>
                                    <li>
                                        <field name="date"/>
                                    </li>
                                </ul>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <!-- <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority" groups="base.group_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div> -->
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>

        </field>
    </record>


    <!--PIVOT-->

    <record id="view_helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Timesheet">
                <field name="user_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="amount_time" type="measure" widget="float_time"/>
            </pivot>

        </field>
    </record>


    <!--GRAFICO-->

    <record id="view_helpdesk_ticket_graph" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string="Graph" type="line">
                <field name="user_id"/>
                <field name="amount_time" type="measure"/>
            </graph>

        </field>
    </record>

    <!--CALENDARIO-->

    <record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tikcets" mode="month" date_start="date" event_limit="5">
                <field name="nombre"/>
                <field name="user_id" avatar_field="avatar_128"/>

            </calendar>

        </field>
    </record>

  <!--  <record id="view_helpdesk_tag_action" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tags</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">

        </field>
    </record>--> 

    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10"/>

    <menuitem id="helpdesk_ticket_open" name="Tickets" sequence="10" parent="helpdesk_menu" action="helpdesk_ticket_action"/>

</odoo>