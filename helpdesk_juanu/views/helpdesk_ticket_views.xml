<odoo>

    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date" optional="show"/>
                <field name="date_limit" optional="hide"/>
            </tree>
      </field>
    </record>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <field name="sequence" invisible="1"/>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': true}"
                        statusbar_visible="new,assigned,in_process,pending,resolved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                            <field name="amount_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="assigned"/>
                            
                            <field name="user_id"/>
                            <field name="tickets_count"/>
                            <field name="person_id"/>
                            <field name="tag_name"/>
                            <button string="Crear" name="create_tag" type="object"/>
                            <button string="Limpiar" name="clear_tags" type="object"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="DescripciÃ³n" name="description">
                            <header>
                                <button string="Update" name="update_description" type="object" class="btn-primary"/>
                            </header>
                            <field name="description"/>
                        </page>
                        <page string="Acciones" name="actions">
                            <field name="action_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Acciones a realizar" name="actions_todo">
                            <field name="actions_todo"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date"/>
                <field name="date_limit"/>
                <field name="color"/>
                <progressbar field="activity_state"
                    colors='{"new": "warning", "in_process": "warning", "pending": "warning", "resolved": "success", "canceled": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                    <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content flex-grow-1">

                                <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                <ul>
                                    <li><field name="date"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <!-- <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority" groups="base.group_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div> -->
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Tickets">
                <field name="user_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="amount_time" type="measure" widget="float_time"/>
                <field name="color" invisible="1"/>
                <field name="sequence" invisible="1"/>
            </pivot>
        </field>
    </record>

    <record id="view_helpdesk_ticket_graph" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string="Tickets" type="pie">
                <field name="user_id" type="row"/>
                <field name="amount_time" type="measure" widget="float_time"/>
                <field name="color" invisible="1"/>
                <field name="sequence" invisible="1"/>
            </graph>
        </field>
    </record>

    <record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" create="0" mode="month" date_start="date" color="user_id" hide_time="true" event_limit="5">
                <field name="name"/>
                <field name="user_id" filters="1" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_id"/>
                <filter string='Assigned' name='filter_assinged' domain="[('state', '=', 'assigned')]"/>
                <filter string='No date' name='filter_no_date' domain="[('date', '=', False)]"/>
                <filter string="Date" name="groupby_date" context="{'group_by':'date'}"/>
                <filter string="User" name="groupby_user" context="{'group_by':'user_id'}"/>
            </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="helpdesk_ticket">
      <field name="name">Helpdesk ticket</field>
      <field name="res_model">helpdesk.ticket</field>
      <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
    </record>

    <menuitem id="helpdesk_root" name="Helpdesk" web_icon="helpdesk_juanu,static/description/icon.png"/>
    <menuitem id="tickets" name="Tickets" parent="helpdesk_juanu.helpdesk_root" action="helpdesk_juanu.helpdesk_ticket"/>
    <menuitem id="helpdesk_menu_config" name="Config" parent="helpdesk_juanu.helpdesk_root"/>

</odoo>