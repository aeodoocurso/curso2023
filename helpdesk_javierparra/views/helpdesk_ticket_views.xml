<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- vista de tipo tree para el modelo que muestra m치s informaci칩n-->
  <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket.tree</field>
    
    <field name="model">helpdesk.ticket</field>
    <field name= "arch" type='xml' >
      <tree string="Tickets">
        <field name="sequence" widget="handle" />
        <field name="name"/>
        <field name="user_id"/>
        <field name="date" optional="show"/>
        <field name="date_limit" optional="hide"/>
        <field name="description">
        </field>

        <button string="Update Description" name="update_description" type="object" class="btn-primary"/>
        <button string="Update All Description" name="update_all_descriptions" type="object" class="btn-primary"/>
        <field name="state"/>
        
      </tree>
      
    </field>
  </record>

   <record id="view_helpdesk_ticket_form" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket.form</field>
    <field name="model">helpdesk.ticket</field>
    <field name= "arch" type='xml'>
      <form string="Tickets">
        <header>
            <button name="set_assigned" 
            string="Assign To Me" 
            type="object" states="new"
            groups='helpdesk_javierparra.res_groups_helpdesk_manager'/>
            <field name="state" widget="statusbar" statusbar_visible="new,assigned,in_process,pending,resolved"/>
        </header>
        
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name"/>
            </h1>
          </div>
          <group>
            <group>
              <field name="date"/>
              <field name="date_limit"/>
              <field name="amount_time" widget='float_time'/>
            </group>
            <group>
              <field name="assigned"/>
              <field name="user_id"/>
              <field name="ticket_count"/>
              <field name="person_id" options="{'no_create':'True'}"/>
              <field name="person_id" options="{'no_quick_create':'True', 'no_open':'True'}"/>
              <field name="tag_name"/>

              <button string="Crear" name="create_tag" type="object" class="btn-primary"/>
              <button string="Borrar" name="clear_tags" type="object" class="btn-primary"/>
              <field name="tag_ids" widget="many2many_tags"/>
            </group>
          </group>
  
          <notebook>
            <page string="Description" name='description'>
              <button string="Update Description" name="update_description" type="object" class="btn-primary"/>
              <field name="description"/>
            </page>
            <page string="To Do" name='to_do'>
              <field name="actions_todo"/>
            </page>
            
            <page string="Actions" name='actions'>
              <button string="Set all as done" name="set_all_actions_as_done" type="object" class="btn-primary"/>
              <!--
              <button string="OpenRelated" name="%(helpdesk_javierparra.helpdesk_ticket_actions_related_action)d" type="action"/>
              -->
              <button string="Open related Actions" name="get_related_actions" type="object"/>
              <field name="action_ids" context="{'default_state':'done','tree_view_ref':'helpdesk_javierparra.view_helpdesk_ticket_action_tree_simple', 'form_view_ref':'helpdesk_javierparra.view_helpdesk_ticket_action_form_simple'}" />
            </page>

            </notebook>

            
        </sheet>
      </form>
    </field>
  </record>  

  <!--VISTA SEARCH-->
 
  <record id="view_helpdesk_ticket_search" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket.search</field>
    <field name="model">helpdesk.ticket</field>
    <field name= "arch" type='xml'>
      <search string='Tickets'>
        <field name="name"/>
        <field name="user_id"/>
        <filter string="Assigned" name="filter_assigned" domain="[('assigned', '=' ,True)]"/>
        <filter string="No Date" name="date" domain="[('date','=',False)]"/>
        <filter string="Date" name="date" domain="{'group_by':'date'}"/>
        <filter string="User" name="user" domain="{'group_by':'user_id'}"/>
      </search>
      </field>
  </record>

<!--
Vista kanban:
mostrar en tarjeta usuario y tiempo dedicado
agrupar por usuario
extra: a침adir un field color, para cambiar el color de la tarjeta, ver como est치 hecho en crm.lead
-->

<!--Vista kanban-->

  <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket.kanban</field>
    <field name="model">helpdesk.ticket</field>
    <field name= "arch" type='xml' >
    <kanban default_group_by='user_id' >
      <field name="name"/>
      <field name="date"/>
      <field name="user_id"/>
      <field name="color"/>
      <templates>
      <t t-name="kanban-box">
        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
          <div class="o_dropdown_kanban dropdown">
            <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu"><span class="fa fa-ellipsis-v"/></a>
            <div class="dropdown-menu" role="menu">
              <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
              <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
              <ul class="oe_kanban_colorpicker" data-field="color"/>
            </div>
          </div>
          <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
            <div class="oe_kanban_details d-flex flex-column justify-content-between">
              <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
              Date: <field name="date"/>
              User: <field name="user_id"/>
          </div>
          <div class="oe_kanban_footer">
            <div class="o_kanban_record_bottom">
              <div class="oe_kanban_bottom_right">
                <field name="user_id" widget="many2one_avatar_user"/>
              </div>
          </div>
          </div>
          </div>
        </div>
        </t>
      </templates>
    </kanban>
    </field>
  </record>


<!--VISTA PIVOT en odoo 16-->
  <record id="view_helpdesk_ticket_pivot" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket.pivot</field>
    <field name="model">helpdesk.ticket</field>
    <field name= "arch" type='xml' >
    <pivot string="Tickets">
      <field name="user_id" type="row"/>
      <field name="date" interval="month" type="col"/>
      <field name="amount_time" type="measure" widget="float_time"/>
      <field name="color" invisible="1"/>
      <field name="sequence" invisible="1"/>
    </pivot>
    </field>
  </record>


  <!--VISTA Graph-->
<record id="view_helpdesk_ticket_graph" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket.graph</field>
    <field name="model">helpdesk.ticket</field>
    <field name= "arch" type='xml' >
    <graph string="Helpdesk" type="pie">
      <field name="user_id"/>
      <field name="amount_time" type="measure" widget="float_time" />
    </graph>
    </field>
  </record>


<record id="view_helpdesk_ticket_calendar" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket.calendar</field>
    <field name="model">helpdesk.ticket</field>
    <field name= "arch" type='xml' >
    
    <calendar string="Tickets" mode='month' create="0" date_start="date" color="user_id" event_limit="5">
        <field name="name"/>
        <field name="user_id" avatar_field="avatar_128"/>
    </calendar>
    </field>
  </record>



  <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">HelpDesk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,pivot,graph,calendar,form</field>
        <field name="context">{'visible_product_tmpl_id':False}</field>
    </record>
    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10"/>
    <menuitem id="helpdesk_ticket_open" name="Tickets" sequence="10" parent="helpdesk_menu" action="helpdesk_ticket_action"/>
    <menuitem id="helpdesk_ticket_config" name="Configuration" sequence="20" parent="helpdesk_menu"/>
</odoo>