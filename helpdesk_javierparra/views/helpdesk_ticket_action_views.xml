<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="view_helpdesk_ticket_action_form" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket_action.form</field>
    <field name="model">helpdesk.ticket.action</field>
    <field name= "arch" type='xml'>
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="state"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">HelpDesk Ticket Actions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.action</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_smiling_face">
              Click to add a new ticket action
          </p>
        </field>
    </record>

    <menuitem id="helpdesk_ticket_action_action" name="Actions" sequence="10" parent="helpdesk_menu" action="helpdesk_ticket_tag_action" />
</odoo>