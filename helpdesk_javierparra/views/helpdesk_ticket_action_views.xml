<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_helpdesk_ticket_action_form" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket_action.form</field>
    <field name="model">helpdesk.ticket.action</field>
    <field eval="10" name="priority"/>
    <field name= "arch" type='xml'>
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="state"/>
            <field name="ticket_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>


     <record id="view_helpdesk_ticket_action_form_simple" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket_action.form.simple</field>
    <field name="model">helpdesk.ticket.action</field>
    <field eval="100" name="priority"/>
    <field name= "arch" type='xml'>
      <form>
        <group>
          <field name="name"/>
          <field name="state"/>
        </group>
      </form>
    </field>
  </record>


<record id="view_helpdesk_ticket_action_tree" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket_action.tree</field>
    <field name="model">helpdesk.ticket.action</field>
    <field eval="10" name="priority"/>
    <field name= "arch" type='xml'>
      <tree string='Action'>
        <field name="name"/>
        <field name="state"/>
        <field name="ticket_id"/>
      </tree>
    </field>
  </record>


  <record id="view_helpdesk_ticket_action_tree_simple" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket_action.tree.simple</field>
    <field name="model">helpdesk.ticket.action</field>
    <field eval="100" name="priority"/>
    <field name= "arch" type='xml'>
      <tree string='Action'>
        <field name="name"/>
        <field name="state"/>
      </tree>
    </field>
  </record>



<record id="view_helpdesk_ticket_search" model="ir.ui.view">
    <field name="name">view.helpdesk_ticket_action.search</field>
    <field name="model">helpdesk.ticket.action</field>
    <field name= "arch" type='xml'>
      <search string='Tickets'>
        <field name="name"/>
        <field name="state"/>
        <field name="ticket_id"/>
        <group name="groupby" string="Group By">
          <filter string="State" name="state_groupby" context="{'group_by':'state'}"/>
          <filter string="Ticket" name="ticket_groupby" context="{'group_by':'ticket_id'}"/>
        </group>
      </search>
      </field>
  </record>
  

  <record id="helpdesk_ticket_actions_action" model="ir.actions.act_window">
        <field name="name">HelpDesk Ticket Actions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.action</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_smiling_face">
              Click to add a new ticket action
          </p>
        </field>
    </record>




  <record id="helpdesk_ticket_actions_related_action" model="ir.actions.act_window">
        <field name="name">HelpDesk Ticket Actions Related</field>
        <field name="res_model">helpdesk.ticket.action</field>
        <field name="view_mode">tree,form</field>
        <!--#domain active id-->
        <field name="domain">[('ticket_id','=',active_id)]</field>
        <!--#context default ticket_id-->
        <field name="context">{'default_ticket_id':active_id}</field>
    </record>


</odoo>