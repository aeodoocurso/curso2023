<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">Heldpesk.tickets.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new, assigned, in_process" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>                            
                            <field name="date" optional="show" />
                            <field name="date_limit" optional="hide" />
                        </group>
                        <group>
                            <field name="user_id" />                        
                        </group>
                    </group>
                    <notebook>
                        <page name="descrip" string="DescripciÃ³n">
                            <field name="description" />
                        </page>                    
                        <page name="todo" string="To Do">
                            <field name="actions_todo" />                    
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">Heldpesk.tickets.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="tickets">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="user_id" />
                <field name="state" />
                <field name="date" optional="show" />
                <field name="date_limit" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Heldpesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>

    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10"/>
    <menuitem id="helpdesk_ticket_open" name="Tickets" sequence="10" parent="helpdesk_menu" action="helpdesk_ticket_action"/>

</odoo>