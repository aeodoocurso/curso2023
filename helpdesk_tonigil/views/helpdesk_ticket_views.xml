<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Creamos la vista formulario -->
    <record id="helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_tickets.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Assign to me"
                    name="get_assigned"
                    type="object"
                    states="new"
                    groups="helpdesk_tonigil.res_groups_helpdesk_manager"/> <!-- El botón sólo se verá cuando el estado sea 'new' y el grupo de usuarios 'manager' -->
                    <field name="state" widget="statusbar" statusbar_visible="new,assigned,in_process,pending,resolved"/>
                </header>
                <sheet>
                    <div class="oe_tittle">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                            <field name="amount_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="assigned"/>
                            <field name="user_id"/>
                            <field name="tickets_count"/>
                            <field name="person_id" options="{'no_quick_create': True, 'no_open': True}"/>
                            <field name="tag_name"/>
                            <button string="Crear" name="create_tag" type="object"/>
                            <button string="Limpiar" name="clear_tags" type="object"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="To Do" name="to_do">
                            <field name="actions_todo"/>
                        </page>
                        <page string="Actions" name="actions">
                            <!-- <label for="actions_todo" string="To Do"/> -->
                            <button string="Set all as done" name="set_actions_as_done" type="object"/>

                            <!-- Esta es la forma de mostrar el formulario relacionado -->
                            <field name="action_ids" context="{'default_state': 'done', 'tree_view_ref':'helpdesk_tonigil.view_helpdesk_ticket_action_tree_simple', 'form_view_ref':'helpdesk_tonigil.view_helpdesk_ticket_action_form_simple'}"/>

                            <!-- Esta es la forma de mostrar el formulario embebido -->
                            <!-- <field name="action_ids">
                                <tree string="Actions">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                                <form>
                                    <button string="Set done" name="set_done" type="object" class="btn-primary"/>
                                    <button string="Set todo" name="set_todo" type="object" class="btn-primary"/>
                                    <group>
                                        <field name="name"/>
                                        <field name="state" readonly="1"/>
                                    </group>
                                </form>
                            </field> -->
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Creamos la vista tree -->
    <record id="helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_tickets.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="tickets">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date" optional="show"/>
                <field name="date_limit" optional="hide"/>
                <!-- Estos botones sirven para llamar a los métodos referenciados en la etiqueta "name" -->
                <button string="Update description" name="update_description" type="object" class="btn-primary"/>
                <button string="Update all description" name="update_all_description" type="object" class="btn-primary"/>
            </tree>
        </field>
    </record>

    <!-- Creamos la vista kanban -->
    <record id="view_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">view.helpdesk_tickets.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban  default_group_by="user_id">
                <field name="name"/>
                <field name="date"/>
                <field name="color"/>
                <field name="user_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                    <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content flex-grow-1">

                                <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                <ul>
                                    <li><field name="date"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <!-- <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority" groups="base.group_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div> -->
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

        <!-- Creamos la vista pivot -->
    <record id="helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">view.helpdesk_tickets.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Tickets">
                <field name="user_id" type="row"/>
                <field name="date" interval="month" type="col"/>
                <field name="amount_time" type="measure" widget="float_time"/>
                <field name="color" invisible="1"/>
                <field name="sequence" invisible="1"/>
            </pivot>
        </field>
    </record>

        <!-- Creamos la vista graph -->
    <record id="helpdesk_ticket_graph" model="ir.ui.view">
        <field name="name">view.helpdesk_tickets.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string="Tickets" type="pie">
                <field name="user_id"/>
                <field name="amount_time" type="measure" widget="float_time"/>
                <field name="color" invisible="1"/>
                <field name="sequence" invisible="1"/>
            </graph>
        </field>
    </record>

    <!-- Creamos la vista calendar -->
    <record id="helpdesk_ticket_calendar" model="ir.ui.view">
        <field name="name">view.helpdesk_tickets.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" create="0" mode="month" date_start="date" color="user_id" event_limit="5">
                <field name="name"/>
                <field name="user_id" avatar_field="avatar_128"/>
            </calendar>
        </field>
    </record>

    <!-- Creamos la vista search -->
    <record id="helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view.helpdesk_tickets.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Tickets">
                <field name="name"/>
                <field name="user_id"/>
                <filter string="Assigned" name="filter_to_assigned" domain="[('assigned','=',True)]"/>
                <filter string="No date" name="filter_no_date" domain="[('date','=',False)]"/>
                <filter string="Date" name="date" context="{'group_by':'date'}"/>
                <filter string="User" name="user" context="{'group_by':'user_id'}"/>
            </search>
        </field>
    </record>


    <!-- Creamos la acción para el menú -->
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,pivot,graph,calendar,form</field>
    </record>


    <!-- Creamos el menú -->
    <!-- Este aparece en el menú principal -->
    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10" web_icon="helpdesk_tonigil,static/description/icon.png"/>
    <!-- Este aparece dentro del menú Helpdesk, por el parent enlazado y ejecuta la acción, por el action enlazado -->
    <menuitem id="helpdesk_ticket_open" name="Tickets" sequence="10" parent="helpdesk_menu" action="helpdesk_ticket_action"/>

</odoo>