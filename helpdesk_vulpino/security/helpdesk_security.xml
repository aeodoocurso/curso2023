<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ir_module_category_helpdesk" model="ir.module.category">
        <field name="name">Helpdesk</field>
    </record>

    <record id="helpdesk_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="ir_module_category_helpdesk"/>
    </record>

    <record id="helpdesk_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="ir_module_category_helpdesk"/>
        <field name="implied_ids" eval="[(4, ref('helpdesk_user') )]"/>
    </record>

    <!-- Normes de registre -->
    <record id="helpdesk_ticket_user_rule" model="ir.rule">
        <field name="name">User tickets</field>
        <field ref="model_helpdesk_ticket" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id), ('user_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('helpdesk_user'))]"/>
    </record>

    <record id="helpdesk_ticket_manager_rule" model="ir.rule">
        <field name="name">User tickets</field>
        <field ref="model_helpdesk_ticket" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('helpdesk_manager'))]"/>
    </record>

</odoo>
