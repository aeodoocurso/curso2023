<odoo>
    <record id="helpdesk_ticket_tag_view_tree" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.tree</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <tree string="Ticket tags">
                <field name="name"/>
            </tree>
        </field>
    </record>
    

    <record id="helpdesk_ticket_tag_view_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.tag.form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>    

    <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>
    <menuitem id='helpdesk_menu_config' name='Config' sequence='10' parent="helpdesk_menu" />
    <menuitem id='helpdesk_ticket_tag_open' name='Ticket tags' sequence='10' parent='helpdesk_menu_config' action='helpdesk_ticket_tag_action' />
</odoo>